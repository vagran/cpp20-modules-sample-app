{
    "files.associations": {
        "*.cppm": "cpp",
        "future": "cpp",
        "thread": "cpp",
        "*.tcc": "cpp",
        "string": "cpp",
        "*.ipp": "cpp"
    },

    "clangd.path": "/opt/clang-latest/bin/clangd",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/src/build/debug",
        "--clang-tidy",
        "--log=verbose"
    ]
}
