{
    "C_Cpp.codeAnalysis.clangTidy.path": "/opt/clang-12/bin/clang-tidy",
    "files.associations": {
        "*.cppm": "cpp",
        "future": "cpp",
        "thread": "cpp",
        "*.tcc": "cpp",
        "string": "cpp",
        "*.ipp": "cpp"
    },
    "C_Cpp.errorSquiggles": "Disabled",
    "clangd.path": "/opt/clang-12/bin/clangd",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/src/build/debug",
        "--clang-tidy",
        "--log=verbose"
    ]
}